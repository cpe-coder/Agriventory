<UserControl x:Class="Agriventory.View.StartupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Agriventory.View"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="800">
    
    <Grid>
        <Border CornerRadius="10" Background="{StaticResource BackgroundMedium}" Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Startup View" Style="{StaticResource SectionHeader}" />
                <TextBlock Text="Welcome to Agriventory!" Foreground="White" FontSize="16" Margin="10"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
