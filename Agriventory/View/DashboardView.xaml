<Window x:Class="Agriventory.View.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:Agriventory.ViewModel"
        xmlns:menuBar="clr-namespace:Agriventory.Utils"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        MouseDown="DashboardView_OnMouseDown"
        Title="Dashboard" 
        MinHeight="600" 
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        AllowsTransparency="True"
        Icon="/Images/logo.ico"
        MinWidth="1000">
    
    <Window.DataContext>
        <vm:NavigationViewModel/>
    </Window.DataContext>

    <Border CornerRadius="12" 
            MouseDown="Background_MouseDown"
            MouseLeftButtonDown="OnMouseLeftButtonDown"
            BorderBrush="#ff5757"
            BorderThickness="1"
            Background="#161622"
    >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
         
            <Grid Grid.Column="0" Background="Transparent">
                <Border Background="#222236"
                        CornerRadius="12,0,0,12" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="75"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0"
                                  CornerRadius="0,0,10,0"
                                  BorderBrush="#161622"
                                  Padding="0,0,0,15"
                                  BorderThickness="0,0,0,5">
                            <Image Source="/Images/dashboardLogo.png"
                                   Height="50"
                                   Margin="0,20,0,0"/>
                        </Border>
                        <StackPanel Grid.Row="1">
                         
                            <menuBar:Btn BorderThickness="1" Style="{StaticResource BtnStyle}"
                                         Command="{Binding HomeCommand}"
                                         IsChecked="True">

                                <Grid >
                                    <TextBlock Text="Home"
                                               Style="{StaticResource TextStyle}" />

                                </Grid>

                            </menuBar:Btn> 
                            <menuBar:Btn BorderThickness="1" Style="{StaticResource BtnStyle}"
                                         Command="{Binding StocksCommand}"
                            >

                                <Grid>

                                    <TextBlock Text="Stocks"
                                               Style="{StaticResource TextStyle}" />

                                </Grid>

                            </menuBar:Btn>
                            
                            <menuBar:Btn BorderThickness="1" Style="{StaticResource BtnStyle}"
                                         Command="{Binding TransactionCommand}"
                            >

                                <Grid>

                                    <TextBlock Text="Transaction"
                                               Style="{StaticResource TextStyle}" />

                                </Grid>

                            </menuBar:Btn>
                            
                            <menuBar:Btn BorderThickness="1" Style="{StaticResource BtnStyle}"
                                         Command="{Binding HistoryCommand}"
                                         >

                                <Grid>

                                    <TextBlock Text="History"
                                               Style="{StaticResource TextStyle}" />

                                </Grid>

                            </menuBar:Btn>
                            
                            <menuBar:Btn BorderThickness="1" Style="{StaticResource BtnStyle}"
                                         Command="{Binding AboutCommand}"
                            >

                                <Grid>

                                    <TextBlock Text="About"
                                               Style="{StaticResource TextStyle}" />

                                </Grid>

                            </menuBar:Btn>

                        </StackPanel>
                        <StackPanel Grid.Row="2">
                            <Border CornerRadius="0,10,0,0"
                                    BorderBrush="#161622"
                                    BorderThickness="0,5,0,0" 
                                    Padding="0,10,0,10">
                                <Button Content="Logout"
                                        VerticalAlignment="Center"
                                        FontWeight="Bold"
                                        Height="30"
                                        Width="100"
                                        Click="Logout_Method"
                                        Cursor="Hand"
                                        BorderBrush="Transparent"
                                        Background="Transparent"
                                        Foreground="White">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="5" 
                                                    BorderThickness="1"
                                                    Margin="0,0,0,0"
                                                    Height="30"
                                                    Width="100"
                                                    Background="#ff5757">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
              <Grid Grid.Column="1">
                  <Grid.RowDefinitions>
                      <RowDefinition Height="50"/>
                      <RowDefinition/>
                  </Grid.RowDefinitions>
                  <StackPanel Grid.Row="0">
                  </StackPanel>
                  <StackPanel Grid.Row="1">
                      <ContentControl x:Name="ContentControl" Content="{Binding CurrentView}"/>
                  </StackPanel>
              </Grid>
        </Grid>
    </Border>
</Window>
