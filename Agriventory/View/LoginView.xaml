<Window x:Class="Agriventory.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Height="500" 
        Width="400" 
        Title="Admin Login"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="LoginView_OnMouseDown"
        Background="Transparent"
        AllowsTransparency="True"
        >
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Images/bg.jpg" Stretch="Fill"></ImageBrush>
        </Border.Background>
        
        <Border CornerRadius="10"
                    BorderThickness="1"
                    BorderBrush="BlueViolet"
                    Opacity="0.95">
            
           <Border.Background >
               <LinearGradientBrush StartPoint="0,0" EndPoint="0,0">
                   <GradientStop Color="#111315" Offset="0" ></GradientStop>
                   <GradientStop Color="#111315" Offset="0.75" ></GradientStop>
                   
               </LinearGradientBrush>
           </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="55"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/> 
                        <ColumnDefinition Width="70"/> 
                        <ColumnDefinition /> 
                        <ColumnDefinition Width="50"/> 
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Foreground="White"
                               FontSize="15"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"
                               Padding="0,0,0,10"
                               FontFamily="Roboto"/>
                    <TextBlock Grid.Column="1" 
                               Foreground="BlueViolet"
                               FontSize="15"
                               FontWeight="Bold"
                               Margin="0,0,0,0"
                               Padding="0,0,0,10"
                               VerticalAlignment="Center"
                               FontFamily="Roboto"/>
                </Grid>
              <StackPanel Orientation="Vertical" 
                          HorizontalAlignment="Center" 
                          Margin="0, 20,0,0" 
                          Width="300" 
                          Grid.Row="1">
                 <Image Source="/Images/agrilogo.png" 
                        Width="80" 
                        Height="80" />
                  <Grid HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                      <Grid.RowDefinitions>
                          <RowDefinition />
                          <RowDefinition/>
                      </Grid.RowDefinitions>
                  <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="40"/>
                      <ColumnDefinition Width="75"/>
                  </Grid.ColumnDefinitions>
                  <TextBlock Grid.Row="0" Grid.Column="0" Text="Agri"
                             Foreground="BlueViolet"
                             FontSize="20"
                             FontWeight="Bold"
                             Margin="0,0,0,0"
                             Padding="0,0,0,10"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             FontFamily="Roboto"
                  />
                  <TextBlock Grid.Row="0" Grid.Column="1" Text="ventory"
                             Foreground="white"
                             FontSize="20"
                             FontWeight="Bold"
                             Margin="0,0,0,0"
                             Padding="0,0,0,10"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             FontFamily="Roboto"
                  />
                  </Grid>
                 <TextBlock x:Name="ErrorMessage" 
                            TextAlignment="Center" 
                            Foreground="#ff2100" 
                            FontWeight="Medium" 
                            Margin="0,-5,0,2"/>
                 
                  <TextBlock Text="Username" 
                             Foreground="White" 
                             FontFamily="roboto"
                             FontWeight="Medium"/>
                 <Border CornerRadius="5" 
                         Margin="0,0,0,10"
                         BorderThickness="1"
                         Height="35"
                         BorderBrush="BlueViolet">
                     <TextBox BorderBrush="Transparent" 
                              Height="35"
                              Foreground="White"
                              x:Name="Username"
                              Background="Transparent"
                              VerticalAlignment="Center"
                              Padding="0,10,6,0"
                              FontWeight="Medium"
                              FontFamily="roboto"
                     />
                 </Border>
                 <TextBlock Text="Password" 
                            Foreground="White" 
                            FontFamily="roboto"
                            FontWeight="Medium"/>
                 <Border CornerRadius="5" 
                         Height="35"
                         BorderThickness="1"
                         Margin="0,0,0,10"
                         BorderBrush="BlueViolet">
                     <TextBox BorderBrush="Transparent" 
                              Height="35" 
                              x:Name="Password"
                              Foreground="White"
                              Background="Transparent"
                              Padding="0,10,6,0"
                              VerticalAlignment="Center"
                              FontWeight="Medium"
                              FontFamily="roboto"
                     />
                 </Border>
                
                 <Button Content="Log In"
                         x:Name="LoginButton"
                         VerticalAlignment="Center"
                         FontWeight="Bold"
                         Height="35"
                         Cursor="Hand"
                         BorderBrush="Transparent"
                         Background="Transparent"
                         Click="ButtonBase_OnClick"
                         Foreground="White">
                     <Button.Template>
                         <ControlTemplate TargetType="Button">
                             <Border CornerRadius="5" 
                                     BorderThickness="1"
                                     Margin="0,0,0,0"
                                     Height="35"
                                     Background="BlueViolet">
                             <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                             </Border>
                         </ControlTemplate>
                     </Button.Template>
                 </Button>
                 <Button Content="Close"
                         VerticalAlignment="Center"
                         FontWeight="Bold"
                         Height="28"
                         Width="60"
                         Cursor="Hand"
                         Margin="0,40,0,0"
                         BorderBrush="Transparent"
                         Background="Transparent"
                         Click="Close_Method"
                         Foreground="White">
                     <Button.Template>
                         <ControlTemplate TargetType="Button">
                             <Border CornerRadius="4" 
                                     BorderThickness="1"
                                     Margin="0,0,0,0"
                                     Height="28"
                                     BorderBrush="BlueViolet">
                                 <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                             </Border>
                         </ControlTemplate>
                     </Button.Template>
                 </Button>
                    
                
              </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
