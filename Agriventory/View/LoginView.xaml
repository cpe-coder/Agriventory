<Window x:Class="Agriventory.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Height="500" 
        Width="800" 
        Title="Admin Login"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="LoginView_OnMouseDown"
        Background="Transparent"
        AllowsTransparency="True"
        Icon="/Assets/logo.ico"
        >
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Assets/bg.jpg" Stretch="Fill"></ImageBrush>
        </Border.Background>
        
        <Border CornerRadius="10"
                    BorderThickness="1"
                    BorderBrush="#ff5757"
                    Opacity="0.95">
            
           <Border.Background >
               <LinearGradientBrush StartPoint="0,0" EndPoint="0,0">
                   <GradientStop Color="#161622" Offset="0" ></GradientStop>
                   <GradientStop Color="#161622" Offset="0.75" ></GradientStop>
                   
               </LinearGradientBrush>
           </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="420"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Grid.Row="0">
                    <TextBlock Text="Welcome back!" 
                               Foreground="#ff5757"
                               FontWeight="Bold"
                               FontSize="30"
                               FontStyle="Italic"
                               Margin="0,0,0,5"
                               FontFamily="roboto"
                               VerticalAlignment="Center"
                               TextAlignment="Center"/>
                </StackPanel>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400" /> 
                        <ColumnDefinition Width="400" /> 
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                        BorderBrush="#ff5757" 
                        Width="300"
                        CornerRadius="10"
                        BorderThickness="1.5"
                    >
                       <Border.Background>
                           <ImageBrush ImageSource="/Assets/bg2.jpg" />
                       </Border.Background>
                    </Border>
              <StackPanel Orientation="Vertical" 
                          HorizontalAlignment="Center" 
                          Margin="0, 0,0,0" 
                          Width="300" 
                          Grid.Column="1">
                 <Image Source="/Assets/dashboardLogo.png" 
                        Width="150"
                        Height="100"/>
                  <Grid HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                      <Grid.RowDefinitions>
                          <RowDefinition />
                          <RowDefinition/>
                      </Grid.RowDefinitions>
                  <Grid.ColumnDefinitions>
                      <ColumnDefinition />
                      <ColumnDefinition Width="40"/>
                      <ColumnDefinition Width="75"/>
                  </Grid.ColumnDefinitions>
                  <TextBlock Grid.Row="0" Grid.Column="0" Text="Login to"
                             Foreground="White"
                             FontSize="15"
                             FontWeight="Bold"
                             Margin="0,0,5,0"
                             Padding="0,0,0,10"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             FontFamily="Roboto"
                  />
                  <TextBlock Grid.Row="0" Grid.Column="1" Text="Agri"
                             Foreground="#ff5757"
                             FontSize="20"
                             FontWeight="Bold"
                             Margin="0,0,0,0"
                             Padding="0,0,0,10"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             FontFamily="Roboto"
                  />
                  <TextBlock Grid.Row="0" Grid.Column="2" Text="ventory"
                             Foreground="white"
                             FontSize="20"
                             FontWeight="Bold"
                             Margin="0,0,0,0"
                             Padding="0,0,0,10"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             FontFamily="Roboto"
                  />
                  </Grid>
         
                  <TextBlock Text="Username" 
                             Foreground="White" 
                             FontFamily="roboto"
                             Margin="0,5,0,0"
                             FontWeight="Medium"/>
                 <Border CornerRadius="5" 
                         Margin="0,0,0,10"
                         BorderThickness="1"
                         Height="35"
                         BorderBrush="#ff5757">
                     <TextBox BorderBrush="Transparent" 
                              Height="35"
                              Foreground="White"
                              x:Name="UsernameTextBox"
                              Background="Transparent"
                              VerticalAlignment="Center"
                              Padding="0,10,6,0"
                              FontWeight="Medium"
                              FontFamily="roboto"
                     />
                 </Border>
                 <TextBlock Text="Password" 
                            Foreground="White" 
                            FontFamily="roboto"
                            FontWeight="Medium"/>
                 <Border CornerRadius="5" 
                         Height="35"
                         BorderThickness="1"
                         Margin="0,0,0,10"
                         BorderBrush="#ff5757">
                     <PasswordBox BorderBrush="Transparent" 
                              Height="35" 
                              x:Name="PasswordBox"
                              Foreground="White"
                              Background="Transparent"
                              Padding="0,10,6,0"
                              VerticalAlignment="Center"
                              FontWeight="Medium"
                              FontFamily="roboto"
                     />
                 </Border>
                
                 <Button Content="Log In"
                         x:Name="LoginButton"
                         VerticalAlignment="Center"
                         FontWeight="Bold"
                         Height="35"
                         Cursor="Hand"
                         BorderBrush="Transparent"
                         Background="Transparent"
                         Click="LoginButtonClicked"
                         Foreground="White">
                     <Button.Template>
                         <ControlTemplate TargetType="Button">
                             <Border CornerRadius="5" 
                                     BorderThickness="1"
                                     Margin="0,0,0,0"
                                     Height="35"
                                     Background="#ff5757">
                             <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                             </Border>
                         </ControlTemplate>
                     </Button.Template>
                 </Button>
                 <Grid HorizontalAlignment="Center"
                       Height="50"
                       VerticalAlignment="Center">
                     
                <TextBlock Foreground="LightGray" 
                           FontSize="10" 
                           Margin="0,20,0,0"
                           TextWrapping="Wrap" 
                           TextAlignment="Center" 
                           FontFamily="roboto"
                           Text="Only admin is allowed to use this system!, Thank you for understanding." />
                 </Grid>
              </StackPanel>
                </Grid>

            </Grid>
        </Border>
    </Border>
</Window>
