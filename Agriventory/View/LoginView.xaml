<Window x:Class="Agriventory.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Height="450" 
        Width="800" 
        Title="Admin Login"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="LoginView_OnMouseDown"
        Background="Transparent"
        AllowsTransparency="True"
        >
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/images/bg.jpg" Stretch="Fill"></ImageBrush>
        </Border.Background>
        
        <Border CornerRadius="10"
                    BorderThickness="1"
                    BorderBrush="BlueViolet"
                    Opacity="0.95">
            
           <Border.Background >
               <LinearGradientBrush StartPoint="0,0" EndPoint="0,0">
                   <GradientStop Color="#111315" Offset="0" ></GradientStop>
                   <GradientStop Color="#111315" Offset="0.75" ></GradientStop>
                   
               </LinearGradientBrush>
           </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="55"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/> 
                        <ColumnDefinition Width="70"/> 
                        <ColumnDefinition /> 
                        <ColumnDefinition Width="50"/> 
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Admin"
                               Foreground="White"
                               FontSize="15"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"
                               Padding="0,0,0,10"
                               FontFamily="Roboto"/>
                    <TextBlock Grid.Column="1" Text="Login"
                               Foreground="BlueViolet"
                               FontSize="15"
                               FontWeight="Bold"
                               Margin="0,0,0,0"
                               Padding="0,0,0,10"
                               VerticalAlignment="Center"
                               FontFamily="Roboto"/>
                    <Border Grid.Column="3" 
                            Height="20" 
                            HorizontalAlignment="Right" 
                            Margin="0,5,5,0" 
                            VerticalAlignment="Top" 
                            Width="20" 
                            Background="BlueViolet" 
                            CornerRadius="3">
                        <Button
                                Height="20"
                                Width="20" 
                                Content="ðŸ—™"
                                FontSize="14"
                                Foreground="#111315"
                                Cursor="Hand" 
                                Padding="0,-4,0,0"
                                VerticalAlignment="Center"
                                BorderBrush="Transparent"
                                Background="Transparent"
                                Click="Close_Method"
                               />
                    </Border>
                   
                </Grid>
              <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0, 30,0,0" Width="300" Grid.Row="2">
                 <Image Source="/images/agrilogo.png" Width="80" Height="80" />
                  <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                      <Grid.RowDefinitions>
                          <RowDefinition />
                          <RowDefinition/>
                      </Grid.RowDefinitions>
                  <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="40"/>
                      <ColumnDefinition Width="75"/>
                  </Grid.ColumnDefinitions>
                  <TextBlock Grid.Row="0" Grid.Column="0" Text="Agri"
                             Foreground="BlueViolet"
                             FontSize="20"
                             FontWeight="Bold"
                             Margin="0,0,0,0"
                             Padding="0,0,0,10"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             FontFamily="Roboto"
                  />
                  <TextBlock Grid.Row="0" Grid.Column="1" Text="ventory"
                             Foreground="white"
                             FontSize="20"
                             FontWeight="Bold"
                             Margin="0,0,0,0"
                             Padding="0,0,0,10"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             FontFamily="Roboto"
                  />
                  </Grid>
                  <TextBlock Text="Username" 
                             Foreground="White" 
                             FontFamily="roboto"
                             FontWeight="Medium"/>
                 <Border CornerRadius="5" 
                         Margin="0,0,0,10"
                         BorderThickness="1"
                         BorderBrush="BlueViolet">
                     <TextBox BorderBrush="Transparent" 
                              Height="35" 
                              Foreground="White"
                              Background="Transparent"
                              VerticalAlignment="Center"
                              FontWeight="Medium"
                              FontFamily="roboto"
                     />
                 </Border>
                 <TextBlock Text="Password" 
                            Foreground="White" 
                            FontFamily="roboto"
                            FontWeight="Medium"/>
                 <Border CornerRadius="5" 
                         BorderThickness="1"
                         Margin="0,0,0,10"
                         BorderBrush="BlueViolet">
                     <TextBox BorderBrush="Transparent" 
                              Height="35" 
                              Foreground="White"
                              Background="Transparent"
                              VerticalAlignment="Center"
                              FontWeight="Medium"
                              FontFamily="roboto"
                     />
                 </Border>
                 <Border CornerRadius="5" 
                         BorderThickness="1"
                         Margin="0,0,0,10"
                         Height="35"
                         Background="BlueViolet">
                 <Button Content="Log In"
                         VerticalAlignment="Center"
                         FontWeight="Bold"
                         BorderBrush="Transparent"
                         Background="Transparent"
                         Foreground="White"/>
                 </Border>
              </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>

