<UserControl x:Class="Agriventory.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="800">



 
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">
            
    <Grid >
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0,5" >
            <TextBlock Text="Dashboard" Foreground="White" Margin="0,5,0,0" FontSize="30" FontWeight="Bold"/>
        </StackPanel>
        <Grid Grid.Row="1" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="{StaticResource BackgroundMedium}" 
                    Height="80"
                    Width="140"
                    Margin="5" 
                    Padding="12" 
                    CornerRadius="5"
                >
                <StackPanel >
                    <TextBlock Text="Total Stocks" Foreground="White" FontSize="12"/>
                    <TextBlock Text="600" Foreground="#ff5757" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="{StaticResource BackgroundMedium}" 
                    Height="80"
                    Width="140"
                    Margin="5" 
                    Padding="12" 
                    CornerRadius="5"
                    Grid.Column="1">
                <StackPanel >
                    <TextBlock Text="Total Transactions" Foreground="White" FontSize="12"/>
                    <TextBlock Text="3,400" Foreground="#ff5757" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>  
            <Border Background="{StaticResource BackgroundMedium}" 
                    Height="80"
                    Width="140"
                    Margin="5" 
                    Padding="12" 
                    CornerRadius="5"
                    Grid.Column="2">
                <StackPanel >
                    <TextBlock Text="Total Pig Category" Foreground="White" FontSize="12"/>
                    <TextBlock Text="6" Foreground="#ff5757" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>  
            <Border Background="{StaticResource BackgroundMedium}" 
                    Height="80"
                    Width="140"
                    Margin="5" 
                    Padding="12" 
                    CornerRadius="5"
                    Grid.Column="3">
                <StackPanel >
                    <TextBlock Text="Total Chicken Category" Foreground="White" FontSize="12"/>
                    <TextBlock Text="3" Foreground="#ff5757" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

        </Grid>
        <StackPanel HorizontalAlignment="Center" Grid.Row="2" Margin="0,20,0,0">
                <TextBlock Text="Available for Chicken" Foreground="White" Margin="0,5,0,0" FontSize="20" FontWeight="Bold"/>
        </StackPanel>
        <Grid Grid.Row="3" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
                <Border Background="{StaticResource BackgroundMedium}" 
                        Height="80"
                        Width="140"
                        Margin="5" 
                        Padding="12" 
                        CornerRadius="5"
                        Grid.Column="0">
                    <StackPanel >
                        <TextBlock Text="Sarimanok" Foreground="White" FontSize="12"/>
                        <TextBlock Text="500" Foreground="#ff5757" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border> 
                <Border Background="{StaticResource BackgroundMedium}" 
                        Height="80"
                        Width="140"
                        Margin="5" 
                        Padding="12" 
                        CornerRadius="5"
                        Grid.Column="1">
                    <StackPanel >
                        <TextBlock Text="Kalmback" Foreground="White" FontSize="12"/>
                        <TextBlock Text="300" Foreground="#ff5757" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border> 
                <Border Background="{StaticResource BackgroundMedium}" 
                        Height="80"
                        Width="140"
                        Margin="5" 
                        Padding="12" 
                        CornerRadius="5"
                        Grid.Column="2">
                    <StackPanel >
                        <TextBlock Text="Vienovo" Foreground="White" FontSize="12"/>
                        <TextBlock Text="200" Foreground="#ff5757" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
        </Grid>
        
        <StackPanel HorizontalAlignment="Center" Grid.Row="4" Margin="0, 20,0,0">
            <TextBlock Text="Available for Pig" Foreground="White" Margin="0,5,0,0" FontSize="20" FontWeight="Bold"/>
        </StackPanel>
        
        <Grid Grid.Row="5" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="{StaticResource BackgroundMedium}" 
                        Height="80"
                        Width="140"
                        Margin="5" 
                        Padding="12" 
                        CornerRadius="5"
                        Grid.Column="0">
                    <StackPanel >
                        <TextBlock Text="Vienovo" Foreground="White" FontSize="12"/>
                        <TextBlock Text="700" Foreground="#ff5757" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border> 
                <Border Grid.Row="0" Background="{StaticResource BackgroundMedium}" 
                        Height="80"
                        Width="140"
                        Margin="5" 
                        Padding="12" 
                        CornerRadius="5" 
                        Grid.Column="1">
                    <StackPanel >
                        <TextBlock Text="Pilmico" Foreground="White" FontSize="12"/>
                        <TextBlock Text="50" Foreground="#ff5757" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border> 
                <Border Grid.Row="0" Background="{StaticResource BackgroundMedium}" 
                        Height="80"
                        Width="140"
                        Margin="5" 
                        Padding="12" 
                        CornerRadius="5"
                        Grid.Column="2">
                    <StackPanel >
                        <TextBlock Text="Cargill" Foreground="White" FontSize="12"/>
                        <TextBlock Text="100" Foreground="#ff5757" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border> 
                <Border Grid.Row="0" Background="{StaticResource BackgroundMedium}" 
                        Height="80"
                        Width="140"
                        Margin="5" 
                        Padding="12" 
                        CornerRadius="5"
                    Grid.Column="3">
                    <StackPanel >
                        <TextBlock Text="Feedpro" Foreground="White" FontSize="12"/>
                        <TextBlock Text="200" Foreground="#ff5757" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="0" Background="{StaticResource BackgroundMedium}" 
                        Height="80"
                        Width="140"
                        Margin="5" 
                        Padding="12" 
                        CornerRadius="5"
                    Grid.Column="4">
                    <StackPanel >
                        <TextBlock Text="Uhanco" Foreground="White" FontSize="12"/>
                        <TextBlock Text="200" Foreground="#ff5757" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="1" Background="{StaticResource BackgroundMedium}" 
                        Height="80"
                        Width="140"
                        Margin="5" 
                        Padding="12" 
                        CornerRadius="5" 
                    Grid.Column="0">
                    <StackPanel >
                        <TextBlock Text="Uno Feeds" Foreground="White" FontSize="12"/>
                        <TextBlock Text="300" Foreground="#ff5757" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border> 
                <Border Grid.Row="1" Background="{StaticResource BackgroundMedium}" 
                        Height="80"
                        Width="140"
                        Margin="5" 
                        Padding="12" 
                        CornerRadius="5"
                    Grid.Column="1">
                    <StackPanel >
                        <TextBlock Text="Premium" Foreground="White" FontSize="12"/>
                        <TextBlock Text="600" Foreground="#ff5757" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
        </Grid>
    </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
