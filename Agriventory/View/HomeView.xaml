<UserControl x:Class="Agriventory.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:Agriventory.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModel:HomeViewModel/>
    </UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">
            
            <Grid>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Dashboard Title -->
                <StackPanel Grid.Row="0" Margin="0,0,0,5">
                    <TextBlock Text="AVAILABLE FOR PIG AND CHICKEN" 
                               Foreground="White" 
                               Margin="0,5,0,0" 
                               FontSize="30" 
                               FontWeight="Bold"/>
                </StackPanel>
                
                <!-- Top Statistics Cards -->
                <Grid Grid.Row="1" Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Stocks -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource BackgroundMedium}" 
                            Height="80"
                            Width="140"
                            Margin="5" 
                            Padding="12" 
                            CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Total Stocks" 
                                       Foreground="White" 
                                       FontSize="12"/>
                            <TextBlock Text="{Binding TotalStocks}" 
                                       Foreground="#ff5757" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Transactions -->
                    <Border Grid.Column="1"
                            Background="{StaticResource BackgroundMedium}" 
                            Height="80"
                            Width="140"
                            Margin="5" 
                            Padding="12" 
                            CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Total Transactions" 
                                       Foreground="White" 
                                       FontSize="12"/>
                            <TextBlock Text="{Binding TotalTransactions}" 
                                       Foreground="#ff5757" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Total Pig Category -->
                    <Border Grid.Column="2"
                            Background="{StaticResource BackgroundMedium}" 
                            Height="80"
                            Width="140"
                            Margin="5" 
                            Padding="12" 
                            CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Total Pig Category" 
                                       Foreground="White" 
                                       FontSize="12"/>
                            <TextBlock Text="{Binding TotalPigProducts}" 
                                       Foreground="#ff5757" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Total Chicken Category -->
                    <Border Grid.Column="3"
                            Background="{StaticResource BackgroundMedium}" 
                            Height="80"
                            Width="140"
                            Margin="5" 
                            Padding="12" 
                            CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Total Chicken Category" 
                                       Foreground="White" 
                                       FontSize="12"/>
                            <TextBlock Text="{Binding TotalChickenProducts}" 
                                       Foreground="#ff5757" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                </Grid>
                
                <!-- Chicken Brands Section Title -->
                <StackPanel HorizontalAlignment="Center" 
                            Grid.Row="2" 
                            Margin="0,20,0,0">
                    <TextBlock Text="AVAILABLE PRODUCTS/STOCKS FOR CHICKEN" 
                               Foreground="White" 
                               Margin="0,5,0,0" 
                               FontSize="20" 
                               FontWeight="Bold"/>
                </StackPanel>
                
                <!-- Chicken Brands -->
                <ItemsControl Grid.Row="3" 
                              Margin="0,5,0,0"
                              ItemsSource="{Binding ChickenBrands}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource BackgroundMedium}" 
                                    Height="80"
                                    Width="180"
                                    Margin="5" 
                                    Padding="12" 
                                    CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding BrandName}" 
                                               Foreground="White" 
                                               FontSize="12"/>
                                    <TextBlock Text="{Binding TotalStocks}" 
                                               Foreground="#ff5757" 
                                               FontSize="20" 
                                               FontWeight="Bold" 
                                               Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- Pig Brands Section Title -->
                <StackPanel HorizontalAlignment="Center" 
                            Grid.Row="4" 
                            Margin="0,20,0,0">
                    <TextBlock Text="AVAILABLE PRODUCTS/STOCKS FOR PIG" 
                               Foreground="White" 
                               Margin="0,5,0,0" 
                               FontSize="20" 
                               FontWeight="Bold"/>
                </StackPanel>
                
                <!-- Pig Brands -->
                <ItemsControl Grid.Row="5" 
                              Margin="0,5,0,0"
                              ItemsSource="{Binding PigBrands}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource BackgroundMedium}" 
                                    Height="80"
                                    Width="140"
                                    Margin="5" 
                                    Padding="12" 
                                    CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding BrandName}" 
                                               Foreground="White" 
                                               FontSize="12"/>
                                    <TextBlock Text="{Binding TotalStocks}" 
                                               Foreground="#ff5757" 
                                               FontSize="20" 
                                               FontWeight="Bold" 
                                               Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>